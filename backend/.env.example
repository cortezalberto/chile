# Database Configuration
DATABASE_URL=postgresql+psycopg://postgres:postgres@localhost:5432/menu_ops

# Redis Configuration
# Note: Docker exposes Redis on port 6380 to avoid conflicts with local Redis
REDIS_URL=redis://localhost:6380

# JWT Configuration
JWT_SECRET=dev-secret-change-me-in-production
JWT_ISSUER=menu-ops
JWT_AUDIENCE=menu-ops-users
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Table Token Configuration (HMAC for diner authentication)
TABLE_TOKEN_SECRET=table-token-secret-change-me

# Ollama Configuration (for RAG)
OLLAMA_URL=http://localhost:11434
EMBED_MODEL=nomic-embed-text
CHAT_MODEL=qwen2.5:7b

# Server Configuration
REST_API_PORT=8000
WS_GATEWAY_PORT=8001

# Environment
ENVIRONMENT=development
DEBUG=true
